class Solution {
    public int missingNumber(int[] nums) {
        Arrays.sort(nums);
        if (nums[0] != 0) return 0;
        int res = -1;
        for (int i = 0; i + 1 < nums.length; i++) {
            if (nums[i + 1] - nums[i] > 1) {
                res = nums[i] + 1;
            } 
        }
        if (res == -1) return nums[nums.length - 1] + 1;
        return res;
    }
}
