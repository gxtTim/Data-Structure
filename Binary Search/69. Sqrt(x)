class Solution {
    // Time: O(log(x)), Space: O(1)
    public int mySqrt(int x) {
        if (x == 0) {
            return 0;
        }
        int start = 1, end = x;
        while (start < end) {
            int mid = start + (end - start) / 2;
            if (mid <= x / mid && (mid + 1) > x / (mid + 1)) {
                return mid; // Result found
            } else if (mid > x / mid) {
                end = mid; // Check the left part
            } else {
                start = mid + 1; // Check the right part
            }
        }
        return start;
    }
}
