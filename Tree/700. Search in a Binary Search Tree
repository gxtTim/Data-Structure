/**
 * Definition for a binary tree node.
 * public class TreeNode {
 *     int val;
 *     TreeNode left;
 *     TreeNode right;
 *     TreeNode(int x) { val = x; }
 * }
 */
class Solution {
    //Time:O(n), Space:O(h), worst O(n), average O(log(n))
    public TreeNode searchBST(TreeNode root, int val) {
        if (root == null) return null;
        TreeNode[] res = new TreeNode[1];
        searchBST(root, val, res);
        return res[0];
    }
    private void searchBST(TreeNode root, int val, TreeNode[] res) {
        if (root == null) return;
        if (root.val == val) res[0] = root;
        searchBST(root.left, val, res);
        searchBST(root.right, val, res);
    }
}
