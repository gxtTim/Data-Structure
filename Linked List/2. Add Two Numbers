/**
 * Definition for singly-linked list.
 * public class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) { val = x; }
 * }
 */
class Solution {
    //Time: O(n), Space: O(n)
    public ListNode addTwoNumbers(ListNode l1, ListNode l2) {
        if (l1 == null && l2 == null) return null;
        if (l1 == null) return l2;
        if (l2 == null) return l1;
        
        ListNode i = l1, j = l2;
        while (j != null) {
            i.val += j.val;
            if (i.val > 9) {
                int tmp = i.val;
                i.val = tmp % 10;
                if (i.next != null) i.next.val += tmp / 10;
                else {
                  i.next = new ListNode(tmp / 10);  
                }
            }
            if (i.next == null) {
                i.next = j.next;
                return l1;
            }
            i = i.next;
            j = j.next;
        }
        while (i != null) {
            if (i.val > 9) {
                int tmp = i.val;
                i.val = tmp % 10;
                if (i.next != null) i.next.val += tmp / 10;
                else i.next = new ListNode(tmp / 10);
            }
            i = i.next;
        }
        return l1;
    }
}
