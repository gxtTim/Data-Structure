class Solution {
    //Time: O(n), Space: O(1)
    public int romanToInt(String s) {
        if (s == null || s.length() == 0) return 0;
        int res = 0;
        for (int i = 0; i < s.length(); i++) {
            if (s.charAt(i) == 'I') {
                //'I' followed by one different letter
                if ((i + 1 < s.length()) && (s.charAt(i + 1) == 'V' ||
                                             s.charAt(i + 1) == 'X')) {
                    res = res - 1;
                }
                else res = res + 1;
            }
            if (s.charAt(i) == 'V') {
                res = res + 5;
            }
            if (s.charAt(i) == 'X') {
                //'X' followed by one different letter
                if ((i + 1 < s.length()) && (s.charAt(i + 1) == 'L' ||
                                             s.charAt(i + 1) == 'C')) {
                    res = res - 10;
                }
                else res = res + 10;
            }
            if (s.charAt(i) == 'L') {
                res = res + 50;
            }
            if (s.charAt(i) == 'C') {
                //'C' followed by one different letter
                if ((i + 1 < s.length()) && (s.charAt(i + 1) == 'D' ||
                                             s.charAt(i + 1) == 'M')) {
                    res = res - 100;
                }
                else res = res + 100;
            }
            if (s.charAt(i) == 'D') {
                res = res + 500;
            }
            if (s.charAt(i) == 'M') {
                res = res + 1000;
            }
        }
        return res;
    }
}
